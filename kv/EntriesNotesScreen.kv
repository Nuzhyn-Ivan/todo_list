<EntriesNotesScreen>:
    name: 'entries_notes_screen'
    on_pre_enter:
        root.init_entries_notes_screen()
    # on_pre_leave:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint: 1, 0.9
            id: entries_sw_id
            bar_width: config.get_option_value('scrollview_size')
            TextInput:
                id: note_id
                text: root.note_text
                size_hint_y: None
                height: max(self.minimum_height, entries_sw_id.height)
                halign: "center"
                is_focusable: True
                hint_text: lang.get('entry_note_textinput_hint')
                font_size: config.get_option_value('font_size')
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            Button:
                text: lang.get('back_btn')
                font_size: config.get_option_value('font_size')
                height: "70dp"
                size_hint:(1, None)
                on_release:
                    root.back()

            Button:
                text: lang.get('save_btn')
                font_size: config.get_option_value('font_size')
                height: "70dp"
                size_hint:(1, None)
                on_release:
                    root.save_note()