<EntriesScreen>:
    name: 'entries_screen'
    orientation: 'vertical'
    on_pre_enter:
        root.init_entries_screen()
#    on_pre_leave:
#        root.leave_entries_screen()

    # Root
    BoxLayout:
        orientation: 'vertical'

        # Upper panel
        BoxLayout:
            id: entries_upper_panel_id
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            size_hint: 1, 0.1
            spacing: 2
            Button:
                id: current_list_btn
                font_size: config.get_option_value('font_size')
                size_hint: 0.6, 1
                on_release: root.manager.change_screen("lists_screen", "right")

            Button:
                id: revoke_btn_id
                text: lang.get('revoke_btn')
                size_hint: 0.2, 1
                font_size: config.get_option_value('font_size')
                disabled: True
                on_release: root.revoke_entry()

            Spinner:
                id: tools_btn_id
                height: "70dp"
                size_hint: 0.2, 1
                font_size: config.get_option_value('font_size')
                text: lang.get('tools_btn')
                values: 'Tags', 'History'
                on_text:
                    root.open_tools_screen(self)

                #disabled: True

        # Entries Panel
        ScrollView:
            id: entries_sw_id
            bar_width: config.get_option_value('scrollview_size')
            MDGridLayout:
                id: entries_panel_id
                #adaptive_size: True
                size_hint_y: None
                height: 50
                #size_hint: 1, None
                cols: 2
                spacing: int(config.get_option_value('spacing'))
                padding: int(config.get_option_value('padding'))
                #height: self.minimum_height

        # Bottom Panel
        BoxLayout:
            orientation: 'vertical'
            height: 50
            size_hint: 1, 0.07
            spacing: 2
            TextInputWithDropDown:
                id: input_id
                halign: "center"
                is_focusable: True
                hint_text: lang.get('entry_textinput_hint')
                font_size: 0.5 * self.height
                write_tab: False
                multiline: False
                on_text_validate:
                    root.create_entry(self.text)
                    self.text = ''