<EntryInfoScreen>:
    name: ScreenNames.ENTRY_INFO
#    on_pre_enter:

    # Root
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'vertical'
        ScrollView:
            size_hint: 1, 0.9
            id: entries_sw_id
            bar_width: root.configuration.get('scrollview_size')
            TextInput:
                id: note_id
                size_hint_y: None
                height: max(self.minimum_height, entries_sw_id.height)
                halign: "center"
                is_focusable: True
                hint_text: lang.get('entry_note_textinput_hint')
                font_size: root.configuration.get('font_size')
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            Button:
                text: lang.get('back_btn')
                font_size: root.configuration.get('font_size')
                height: "70dp"
                size_hint:(1, None)
                on_release:
                    root.manager.change_screen(ScreenNames.ENTRIES, "left")

            Button:
                text: lang.get('save_btn')
                font_size: root.configuration.get('font_size')
                height: "70dp"
                size_hint:(1, None)
                on_release:
                    root.save_note()