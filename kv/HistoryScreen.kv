<HistoryScreen>:
    name: 'history_screen'
    on_pre_enter:
        root.init_history_screen()
    on_pre_leave:
        root.apply_delete_entry()
    # Root
    BoxLayout:
        orientation: 'vertical'
        # Upper panel
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            size_hint: 1, 0.1
            spacing: 2
            Button:
                id: current_list_btn
                height: "70dp"
                font_size: config.get_option_value('font_size')
                on_release:
                    root.manager.change_screen("entries_screen", "left")
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            size_hint: 1, 0.1
            spacing: 2
            Spinner:
                id: tools_btn_id
                height: "70dp"
                size_hint: 0.2, 1
                font_size: config.get_option_value('font_size')
                text: lang.get(config.get_option_value('history_sorting'))
                values: lang.get('az_sorting'), lang.get('za_sorting'), lang.get('min_max_usage_sorting'), lang.get('max_min_usage_sorting')
                on_text:
                    root.sorting_type = lang.get_key_by_value(self.text)
                    root.refresh_history()

            Button:
                id: revoke_btn_id
                text: lang.get('revoke_btn')
                size_hint: 0.2, 1
                font_size: config.get_option_value('font_size')
                disabled: True
                on_release: root.revoke_entry()

        # History Panel
        ScrollView:
            bar_width: config.get_option_value('scrollview_size')
            BoxLayout:
                id: history_panel_id
                size_hint: 1, None
                orientation: 'vertical'
                spacing: int(config.get_option_value('spacing'))
                padding: int(config.get_option_value('padding'))
                height: self.minimum_height
                size_hint_y: None

